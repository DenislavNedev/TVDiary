<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/show_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">


        <ImageView
            android:id="@+id/show_cover_image"
            android:layout_width="147dp"
            android:layout_height="206dp"
            app:srcCompat="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/show_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/show_cover_image"
            android:text="Name"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="25sp" />


        <TextView
            android:id="@+id/show_genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/show_rating"
            android:layout_toRightOf="@id/show_cover_image"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="Genres: "
            android:textColor="#000"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/show_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/show_cover_image"
            android:layout_below="@id/show_name"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="Rating: "
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="25sp" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@id/show_cover_image">
        <TextView
            android:id="@+id/show_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Summary: "
            android:textColor="#000"
            android:textSize="23sp" />
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>